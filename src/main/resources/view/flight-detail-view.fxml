<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="flightDetailView" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.au.cpsc.module4.FlightDesignator.controller.FlightDetailViewController">
  <columnConstraints>
    <ColumnConstraints halignment="LEFT" hgrow="NEVER" maxWidth="130.0" minWidth="130.0" prefWidth="130.0" />
    <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="350.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
  </rowConstraints>
   <children>
      <Label text="Flight Designator" />
      <Label text="Departure Airport" GridPane.rowIndex="1" />
      <Label text="Arrival Airport" GridPane.rowIndex="2" />
      <Label text="Departure Time" GridPane.rowIndex="3" />
      <Label text="Arrival Time" GridPane.rowIndex="4" />
      <Label fx:id="daysOfWeek" text="Days" GridPane.rowIndex="5" />
      <TextField fx:id="flightDesignator" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1">
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </TextField>
      <TextField fx:id="departureAirportIdent" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="arrivalAirportIdent" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TextField fx:id="departureTime" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <TextField fx:id="arrivalTime" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <ButtonBar fx:id="daysButtonBar" buttonMinWidth="30.0" maxWidth="1.7976931348623157E308" prefHeight="40.0" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
        <buttons>
            <ToggleButton fx:id="sunToggleButton" mnemonicParsing="false" onAction="#sunButtonAction" text="Sunday" />
            <ToggleButton fx:id="monToggleButton" mnemonicParsing="false" onAction="#monButtonAction" text="Monday" />
            <ToggleButton fx:id="tueToggleButton" mnemonicParsing="false" onAction="#tueButtonAction" text="Tuesday" />
            <ToggleButton fx:id="wedToggleButton" mnemonicParsing="false" onAction="#wedButtonAction" text="Wednesday" />
            <ToggleButton fx:id="thuToggleButton" mnemonicParsing="false" onAction="#thuButtonAction" text="Thursday" />
            <ToggleButton fx:id="friToggleButton" mnemonicParsing="false" onAction="#friButtonAction" text="Friday" />
            <ToggleButton fx:id="satToggleButton" mnemonicParsing="false" onAction="#satButtonAction" text="Saturday" />
        </buttons>
         <GridPane.margin>
            <Insets right="5.0" top="3.0" />
         </GridPane.margin>
      </ButtonBar>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</GridPane>
